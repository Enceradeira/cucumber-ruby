{
  "extends": [
    "config:base"
  ],
  "regexManagers": [
    {
      "fileMatch": ["\\.gemspec$"],
      "matchStrings": [
	"^.*add.*dependency\\s['\"](?<depName>[^'\"]*)['\"],\\s*['\"](?<currentValue>[^'\"]*)['\"]"
      ],
      "depNameTemplate": "gemspec",
      "datasourceTemplate": "rubygems",
      "versioningTemplate": "ruby"
    }
  ]
}
